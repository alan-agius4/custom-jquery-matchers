{
  "name":        "jasmine-jquery-matchers",
  "description": "Add a set of custom matchers for HTML and CSS related checks, using jQuery.",

  "version":     "0.1.0",
  "main":        "dist/jasmine-jquery-matchers.js",

  "license":     "MIT",

  "repository": {
    "type": "git",
    "url":  "git://github.com/unindented/jasmine-jquery-matchers.git"
  },

  "keywords": [
    "jasmine",
    "jquery",
    "matchers"
  ],

  "engines": {
    "node": ">=0.10.0"
  },

  "scripts": {
    "test":  "./node_modules/.bin/karma start --single-run",
    "watch": "./node_modules/.bin/karma start",

    "build": "./node_modules/.bin/webpack --colors --progress --profile",
    "optim": "./node_modules/.bin/webpack --colors --progress --profile -p"
  },

  "peerDependencies": {
    "jquery":       "*",
    "jasmine-core": "^2.0"
  },

  "devDependencies": {
    "jquery":                       "*",
    "jasmine-core":                 "^2.0",

    "babel-core":                   "^5.4",
    "jshint":                       "^2.7",
    "jscs":                         "^1.13",
    "node-libs-browser":            "^0.5.2",
    "phantomjs":                    "^1.9",
    "webpack":                      "^1.0",

    "karma":                        "^0.12.35",
    "karma-cli":                    "^0.0.4",
    "karma-webpack":                "^1.5.1",
    "karma-jasmine":                "^0.3.5",
    "karma-coverage":               "^0.3.1",

    "karma-phantomjs-launcher":     "^0.2.0",
    "karma-chrome-launcher":        "^0.1.12",
    "karma-firefox-launcher":       "^0.1.6",
    "karma-opera-launcher":         "^0.1.0",
    "karma-safari-launcher":        "^0.1.1",
    "karma-ie-launcher":            "^0.1.5",

    "jshint-loader":                "^0.8.3",
    "jscs-loader":                  "^0.1.0",
    "babel-loader":                 "^5.1.3",
    "istanbul-instrumenter-loader": "^0.1.3",

    "coveralls":                    "^2.11.2"
  }
}
